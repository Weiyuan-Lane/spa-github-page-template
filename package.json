{
  "name": "spa-github-page-template",
  "version": "0.0.1",
  "description": "Static site generator with a Single Page Application (NextJS!)",
  "scripts": {
    "start": "nodemon --exec 'next build && next start'",
    "export": "npm run slides:build && npm run slides:export && npm run slides:publish && npm run slides:cleanup",
    "slides:build": "next build",
    "slides:export": "next export -o dist",
    "slides:publish": "subpath-as-branch -p dist -b github-pages",
    "slides:cleanup": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Weiyuan-Lane/slides.git"
  },
  "author": "Weiyuan Liu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Weiyuan-Lane/slides/issues"
  },
  "homepage": "https://github.com/Weiyuan-Lane/slides#readme",
  "devDependencies": {
    "@zeit/next-sass": "~1.0.1",
    "file-loader": "~4.2.0",
    "next": "~9.0.3",
    "node-sass": "~4.12.0",
    "nodemon": "~1.19.1",
    "react": "~16.9.0",
    "react-dom": "~16.9.0",
    "subpath-as-branch": "~1.0.0",
    "url-loader": "~2.1.0"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "dist/*",
      ".next/*"
    ],
    "delay": "2500"
  }
}
